<!DOCTYPE html>
<html>
  <head>
    <title>IncomeManagement</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_user.present? %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand">Income Manager</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="<%= 'active' if request.fullpath=='/incomes' %>"><a href="/incomes">Incomes</a></li>
          <li class="<%= 'active' if request.fullpath=='/expences' %>"><a href="/expences">Expences</a></li>
          <li class="<%= 'active' if request.fullpath=='/categories' %>"><a href="/categories">Categories</a></li>
          <li class="<%= 'active' if request.fullpath=='/incomes/reports' %>"><a href="/incomes/reports">Reports</a></li>
        </ul>
        <div class=" navbar-brand pull-right" ><a href="/users/sign_out" data-method="delete">Sign Out</a></div>
      </div>
    </nav>

    <div class="col-lg-12 col-md-12 text-center">
      <h4>Hi <%= current_user.email[/[^@]+/].split(".").map {|n| n.capitalize }.join(" ") %></h4>
    </div>
  <% end %>
    <%= yield %>
  </body>
</html>
