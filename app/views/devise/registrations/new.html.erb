<div class="row" style="width:100% !important; height:100% !important; padding:3%;">
  <div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4">
    <div class="col-lg-12 text-center" style="padding-top:5%;">
        <span class="brand">Income Management</span>
    </div>
    <div class="col-lg-12 col-md-12 text-center heading_sign" >
      Sign In
    </div>
    
    <div class="col-md-12 col-md-12 text-center">
        <%= devise_error_messages! %>
    </div>
    
    <div class="col-lg-12 col-md-12 border">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         
        <div class="form-group" >
          <div class="col-lg-12 col-md-12">
            Email Address
          </div>
          <div class="col-lg-12 col-md-12" style="padding-top:2%">
            <%= f.email_field :email, :class => "form-control", :placeholder => "Email Address", :id => "user[email]" ,autofocus: true , required: :true%>
          </div>
        </div>
        <div class="form-group" >
          <div class="col-lg-12 col-md-12 padding_5">
            User Name
          </div>
          <div class="col-lg-12 col-md-12" style="padding-top:2%">
            <%= f.text_field :user_name, :class => "form-control", :placeholder => "User Name", :id => "user[email]" ,autofocus: true , required: :true%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12 col-md-12 padding_5">
            <div class="col-lg-6 col-md-6" style="padding-left:0;">
              Password
            </div>
          </div>
          <div class="col-lg-12 col-md-12" style="padding-top:2%">
            <%= f.password_field :password, :class => "form-control", :placeholder => "Password",:id => "user[password]", autocomplete: "off" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12 col-md-12 padding_5">
            <div class="col-lg-6 col-md-6" style="padding-left:0;">
              Password Confirmation
            </div>
          </div>
          <div class="col-lg-12 col-md-12" style="padding-top:2%">
            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation",:id => "user[password_confirmation]", autocomplete: "off" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12 col-md-12 text-center" style="padding-top:5%;padding-bottom:5%;">
            <button type="submit" class="btn btn-success form-control" name="submit">Sign up</button>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-lg-12 col-md-12" style="padding-top:20%;">
      <div class="col-lg-12 col-md-12 text-center">
        <a href="/users/sign_in">Back to Login</a>
      </div>
    </div>
    <div class="col-lg-12 col-md-12" style="padding-top:20%;">
      <div class="col-lg-12 col-md-12 text-center">
        <a href="#" class="bottom-link">Terms</a>&nbsp;&nbsp;
        <a href="#" class="bottom-link">Privacy</a>&nbsp;&nbsp;
        <a href="#" class="bottom-link">Security</a>&nbsp;&nbsp;
        <a href="#" class="bottom-link">Contact</a>&nbsp;&nbsp;
      </div>
    </div>
  </div>
</div>