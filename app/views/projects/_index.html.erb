<div class="dropdown">
  <button class="dropbtn">Dropdown</button>
  <div class="dropdown-content">
    <%= link_to 'Recent Projects', "/projects?filter=recent", remote: true %>
    <%= link_to 'Category Name ASC', "/projects?filter=category_name", remote: true %>
    <%= link_to 'Username Asc', "/projects?filter=user_name", remote: true %>
    <%= link_to 'Project Title Asc',"/projects?filter=title", remote: true %>
  </div>
</div>
<h1>projects</h1>

<table id="projects">
  <thead>
    <tr>
      <th>Title</th>
      <th>User Name</th>
      <th></th>
      <th>CategoryName</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div id="projects">
      <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.user.user_name %></td>
        <td></td>
        <td><%= project.category.name %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </div>
  </tbody>
</table>

<br>
<div class="col-lg-12">
<%= will_paginate @projects,  renderer: BootstrapPagination::Rails %>
</div>
<%= link_to 'New project', new_project_path %>
